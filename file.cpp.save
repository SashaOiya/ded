int Split ( char *buffer, int File_Size )
{
    int nlines = 0;

    for ( int i = 0; i <= File_Size; ++i ) {
        if ( *( buffer + i ) == '\n' ) {
            ++nlines;
            *( buffer + i ) = '\0';
        }
    }

    return nlines;
}

